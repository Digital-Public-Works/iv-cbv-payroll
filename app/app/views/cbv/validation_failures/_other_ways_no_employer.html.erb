<p><%= t(".other_ways_description", agency_name: agency_translation("shared.agency_full_name")) %></p>

<ul>
  <li><%= t(".other_ways_option_1", agency_portal_name: agency_translation("shared.agency_portal_name")) %></li>
  <li><%= t(".other_ways_option_2") %></li>
  <li><%= t(".other_ways_option_3", agency_acronym: agency_translation("shared.agency_acronym")) %></li>
</ul>

<ul class="usa-button-group margin-top-5">
  <li class="usa-button-group__item">
    <%= link_to t(".try_searching_again"), cbv_flow_employer_search_path, class: "usa-button usa-button" %>
  </li>
  <li class="usa-button-group__item">
    <%= link_to t(".go_to_agency_portal", agency_portal_name: agency_translation("shared.agency_portal_name")), agency_url, class: "usa-button usa-button--outline" %>
  </li>
  <li class="usa-button-group__item">
    <% if @cbv_flow.has_account_with_required_data? %>
      <%= link_to t(".continue_to_report"), cbv_flow_applicant_information_path, class: "usa-button" %>
    <% else %>
      <%= agency_translation("cbv.expired_invitations.show.cta_button_html", agency_url: agency_url) %>
    <% end %>
  </li>
</ul>
