{
  "name": "app",
  "private": true,
  "type": "module",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.20",
    "@rails/actioncable": "^7.2.202",
    "@uswds/uswds": "^3.13.0",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "load-script": "^2.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-minify": "^1.2.0",
    "sass": "^1.97.0",
    "webpack": "^5.104.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
    "build:sass": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.compiled.css --load-path=node_modules/@uswds/uswds/packages --quiet-deps",
    "build:postcss": "postcss ./app/assets/builds/application.compiled.css -o ./app/assets/builds/application.css",
    "build:css": "npm run build:sass && npm run build:postcss",
    "build:css:watch": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --load-path=node_modules/@uswds/uswds/packages --quiet-deps --watch",
    "test": "vitest",
    "format": "prettier --write \"app/javascript/**/*.{js,jsx,ts,tsx}\" \"spec/javascript/**/*.{js,jsx,ts,tsx}\"",
    "format:precommit": "prettier --write",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "devDependencies": {
    "jsdom": "^24.0.0",
    "prettier": "^3.7.4",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "semver": ">= 7.5.2"
  }
}
